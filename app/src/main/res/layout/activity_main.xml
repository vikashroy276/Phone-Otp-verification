<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".EnterOtp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgSendotp"
            android:layout_marginTop="50dp"
            android:src="@drawable/sentimage"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otp Verifaction"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text2"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text3"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroundbox"
        android:layout_marginEnd="60dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="+91"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/input_mobile_no"
            android:hint="9987654321"
            android:background="@null"
            android:textStyle="bold"
            android:textSize="16sp"
            android:importantForAutofill="no"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:inputType="number"/>


    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/get_otp_btn"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/yellow_200"
                android:text="get otp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="30dp"/>

            <ProgressBar
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/sending_otp_pbar"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>


    </LinearLayout>

</ScrollView>